{
    "compilerOptions": {
      "target": "es5", // Adjust according to your project needs
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
  
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  
  }
  